#!/bin/bash
#
# Set all finder windows to list by default

function set-def {
  echo "Writting $1"
  defaults write $1
}

echo -e "\n--- Settings defaults"
set-def 'com.apple.finder FXPreferredViewStyle -string "clmv"'

# Never show the dock!
set-def 'com.apple.dock autohide-delay -float 0'

# Disable transparency in the menu bar and elsewhere on Yosemite
set-def 'com.apple.universalaccess reduceTransparency -bool true'

# Set sidebar icon size to medium
set-def 'NSGlobalDomain NSTableViewDefaultSizeMode -int 2'

# Always show scrollbars
set-def 'NSGlobalDomain AppleShowScrollBars -string "Always"'

# Increase window resize speed for Cocoa applications
set-def 'NSGlobalDomain NSWindowResizeTime -float 0.001'

# Expand save panel by default
set-def 'NSGlobalDomain NSNavPanelExpandedStateForSaveMode -bool true'
set-def 'NSGlobalDomain NSNavPanelExpandedStateForSaveMode2 -bool true'

# Check for software updates daily, not just once per week
set-def 'com.apple.SoftwareUpdate ScheduleFrequency -int 1'

# Disable Notification Center and remove the menu bar icon
launchctl unload -w /System/Library/LaunchAgents/com.apple.notificationcenterui.plist 2> /dev/null

# Disable “natural” (Lion-style) scrolling
set-def 'NSGlobalDomain com.apple.swipescrolldirection -bool false'

# Enable subpixel font rendering on non-Apple LCDs
set-def 'NSGlobalDomain AppleFontSmoothing -int 2'

# Finder: show status bar
set-def 'com.apple.finder ShowStatusBar -bool true'

# Finder: show path bar
set-def 'com.apple.finder ShowPathbar -bool true'

# Display full POSIX path as Finder window title
set-def 'com.apple.finder _FXShowPosixPathInTitle -bool true'

# Disable the warning before emptying the Trash
set-def 'com.apple.finder WarnOnEmptyTrash -bool false'

# Don’t animate opening applications from the Dock
set-def 'com.apple.dock launchanim -bool false'

# Speed up Mission Control animations
set-def 'com.apple.dock expose-animation-duration -float 0.1'
set-def 'com.apple.dock expose-group-by-app -bool false'

# Remove the auto-hiding Dock delay
set-def 'com.apple.dock autohide-delay -float 0'

# Remove the animation when hiding/showing the Dock
set-def 'com.apple.dock autohide-time-modifier -float 0'

# Automatically hide and show the Dock
set-def 'com.apple.dock autohide -bool true'

# Hot corners
# Possible values:
#  0: no-op
#  2: Mission Control
#  3: Show application windows
#  4: Desktop
#  5: Start screen saver
#  6: Disable screen saver
#  7: Dashboard
# 10: Put display to sleep
# 11: Launchpad
# 12: Notification Center
# Top left screen corner → Mission Control
set-def 'com.apple.dock wvous-tl-corner     -int 0'
set-def 'com.apple.dock wvous-tl-modifier   -int 0'
set-def 'com.apple.dock wvous-tr-corner     -int 0'
set-def 'com.apple.dock wvous-tr-modifier   -int 0'
set-def 'com.apple.dock wvous-br-corner     -int 0'
set-def 'com.apple.dock wvous-br-modifier   -int 0'
set-def 'com.apple.dock wvous-bl-corner     -int 0'
set-def 'com.apple.dock wvous-bl-modifier   -int 0'

# Send the dock to the left of the screen
set-def 'com.apple.dock  orientation -string "right"'

# Set the size of icons in the dock
set-def 'com.apple.dock tilesize -int 50'

echo -e "\n--- Cleanup"
echo 'Removing all .DS_Store from $HOME'
find ~ -name .DS_Store -delete

echo 'Restarting Dock'
killall Dock

echo 'Restarting Finder'
killall Finder
